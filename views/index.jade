html
  head
    title=title
    link(href='/scripts/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
  body()
    div.container(style="width:40%")
      div.jumbotron(style=" background: rgba(200, 200, 200, 0.5);")
        h1(align="center") Hello!

        if user
          p Welcome, #{user.fullName}
          p
            a.small(href="profile") Edit my profile
          a.btn.btn-primary(href="/logout") Logout
        else
          p(align="center") Welcome to ProLinks, ready to get started?
          div.jumbotron(style=" background: rgba(200, 200, 200, 0.0);")
            .container
              form.form-signin(role='form')
                h2.form-signin-heading Please sign in
                input.form-control(type='email', placeholder='Email address', required='', autofocus='')
                input.form-control(type='password', placeholder='Password', required='')
                .container.center
                  div.checkbox
                    input(type='checkbox', value='remember-me')
                    |  Remember me
                button.btn.btn-primary.btn-block(type='submit') Log In
          p
            div.col-md-4.text-center
              span.small Don't have an account?
              span &nbsp;
            div.col-md-4.text-center
              a.small(href="/register") Register now